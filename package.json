{
  "private": true,
  "name": "api",
  "version": "2.1.0",
  "description": "Rewrite for Bravo68web API",
  "license": "MIT",
  "author": "Jyotirmoy Bandyopadhyaya [Bravo68] <jbandyopadhayaya@gmail.com>",
  "repository": "git@github.com:BRAVO68WEB/api.git",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "cli": "bun run cli.ts",
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:hasura\"",
    "dev:api": "bun run --hot index.ts",
    "dev:hasura": "cd hasura && hasura --skip-update-check  --envfile ../.env console --no-browser",
    "schema:fetch": "bash ./bin/fetch-gql-schema.sh",
    "schema:generate": "graphql-codegen --config codegen.yml",
    "start": "bun run build/index.js",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/lib-storage": "^3.414.0",
    "@discordjs/core": "^1.0.1",
    "@discordjs/rest": "^2.0.1",
    "@discordjs/ws": "^1.0.1",
    "@hono/oidc-auth": "^1.0.1",
    "axios": "^1.6.4",
    "dotenv": "^16.3.1",
    "envfile": "^7.0.0",
    "graphql": "^16.8.0",
    "graphql-request": "^6.1.0",
    "hono": "^4.0.10",
    "joi": "^17.9.2",
    "mmdb-lib": "^2.0.2",
    "nanoid": "^5.0.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.4",
    "ping": "^0.4.4",
    "redis": "^4.6.8",
    "typescript": "^5.2.2",
    "zod": "^3.22.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@bravo68web/eslint-config": "^1.1.3",
    "@bravo68web/prettier-config": "^1.1.3",
    "@bravo68web/tsconfig": "^1.1.3",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@swc/core": "^1.3.80",
    "@swc/wasm": "^1.3.80",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "bun-types": "latest",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-plugin-react": "^7.33.2",
    "graphqurl": "^1.0.1",
    "hasura-cli": "2.38.0",
    "prettier": "^3.0.3"
  },
  "prettier": "@bravo68web/prettier-config"
}
